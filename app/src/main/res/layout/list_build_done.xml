<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/list_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_user_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorInfo"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/list_user_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorInfo"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/list_user_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorInfo"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/list_user_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorInfo"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/list_developer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorInfo"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:text="@string/files"
            android:textAllCaps="false"
            android:id="@+id/BtFile"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:text="@string/recovery"
            android:id="@+id/bt_download_recovery"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:text="@string/add_back_to_queue"
        android:id="@+id/bt_add_back"
        android:textAllCaps="false"
        android:layout_height="wrap_content" />
</LinearLayout>